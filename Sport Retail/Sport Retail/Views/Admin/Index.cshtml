@model IEnumerable<Product>
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="container-fluid vw-100">
        <a class="btn btn-success p-1 border-light vw-100 d-flex justify-content-center" 
           asp-action="Create"
           asp-controller="Admin"
           >
            Dodaj produkt
        </a>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <th scope="row">@p.Id</th>
                        <td>@p.Name</td>
                        <td>@p.Category.Name</td>
                        <td>@p.Price</td>
                        <td class="p-1 m-1">
                            <a class="btn btn-block bg-warning w-auto"
                               asp-action="Delete"
                               asp-controller="Admin"
                               asp-route-id="@p.Id">
                                Delete
                            </a>
                            <a class="btn btn-block bg-info w-auto"
                               asp-action="Edit"
                               asp-controller="Admin"
                               asp-route-id="@p.Id">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
